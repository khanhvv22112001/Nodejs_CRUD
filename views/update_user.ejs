<!--Main Site-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i>All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light">Use the below form to Update an account</span>
    </div>
    <!--form handling-->
    <form method="post" id="update_user">
        <div class="new_user">
          <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="" />
            <input
              type="text"
              name="name"
              value=""
              placeholder="Mark Stoenis"
            />
          </div>
          <div class="form-group">
            <label for="Email" class="text-light">Email</label>
           <input type="text" name="email" placeholder="example@gmail.com">
          </div>
            <div class="form-group">
              <label for="gender" class="text-light">Gender</label>
              <div class="radio inline">
                  <input type="checkbox" name="gender" value="Male">
                  <label for="gender" class="text-light">Male</label>
              </div>
              <div class="radio inline">
                  <input type="checkbox" name="gender" value="Famale">
                  <label for="gender" class="text-light">Famale</label>
              </div>
            </div>
            <div class="form-group">
              <label for="gender" class="text-light">Status</label>
              <div class="radio inline">
                  <input type="checkbox" name="status" value="Active">
                  <label for="gender" class="text-light">Active</label>
              </div>
              <div class="radio inline">
                  <input type="checkbox" name="status" value="Inactive">
                  <label for="gender" class="text-light">Inactive</label>
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="btn text-dark update">Update</button>
            </div>
            </div>
        </div>
        </div>
      </form>
  </div>
</main>
<!--Main Site-->

